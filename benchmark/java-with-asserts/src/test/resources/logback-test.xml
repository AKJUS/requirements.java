<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="org.bitbucket.cowwoc.requirements.java.internal.terminal.Terminal" level="WARN"/>
	<logger name="org.bitbucket.cowwoc.requirements.java.internal.terminal.NativeTerminal" level="OFF"/>
</configuration>